<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">




    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:scaleType="fillStart" />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textStyle="bold|italic"
        android:id="@+id/moto"
        android:layout_marginTop="20sp"
        android:textColor="#5b92e5"
        android:textSize="27sp"


        />

    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/platinum"
        android:enabled="true"
        android:text="Clear"

        android:textColor="@color/black"
        android:textSize="16dp" />
    <ImageView
        android:layout_width="370sp"
        android:layout_height="370sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/imageView"
        android:layout_marginTop="10sp"
        android:contentDescription="Photo_Taken"
        android:layout_below="@+id/moto"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="#F9C784"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/result"

        android:layout_above="@+id/button"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pitch"
        android:textColor="#F9C784"
        android:id="@+id/Pitch"
        android:layout_above="@+id/seek_bar_pitch"
        android:layout_centerInParent="true"
        android:textSize="18sp" />

    <SeekBar
        android:id="@+id/seek_bar_pitch"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Speed"
        android:layout_centerInParent="true"
        android:progressTint='@color/platinum'
        android:progressBackgroundTint='@color/champagne'
        android:progress="50" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speed"
        android:textColor="#F9C784"
        android:id="@+id/Speed"
        android:layout_above="@+id/seek_bar_speed"
        android:layout_centerInParent="true"
        android:textSize="18sp" />

    <SeekBar
        android:id="@+id/seek_bar_speed"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_speak"
        android:layout_marginBottom="16dp"
        android:layout_centerInParent="true"
        android:progressTint='@color/platinum'
        android:progressBackgroundTint='@color/champagne'
        android:progress="50" />

    <Button

        android:id="@+id/button_speak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:enabled="false"
        android:layout_above="@+id/button"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/platinum"
        android:textColor="@color/black"
        android:layout_marginBottom="30dp"
        android:text="Result to Speech" />

    <Button
        android:id="@+id/button"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button2"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/platinum"
        android:text="Take a Picture"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/button2"
        android:textColor="@color/black"
        android:backgroundTint="@color/platinum"
        android:text="Upload"
        android:textAllCaps="false"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true"
        android:textSize="20sp"

        />



</RelativeLayout>